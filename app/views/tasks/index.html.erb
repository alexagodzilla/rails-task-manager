<h1>My Tasks</h1>
<%= @tasks %>
<% @tasks.each do |task| %>
  <ul>
  <li><%= task %></li>
    <li><%= link_to task.title, task_path(task.id) %> <%= link_to "Delete",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%><%= link_to "Update",
  edit_path(task.id)%></li>
  </ul>
<% end %>

